{% extends 'base.html.twig' %}

{% block title %}
    All vermin come from the walls
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            {% for i in product %}
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ i }}</h5>
                            <p class="card-text">{{ i }}</p>
                            <a href="#" class="btn btn-primary">{{ i }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}